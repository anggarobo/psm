{
  "name": "psm",
  "type": "module",
  "private": true,
  "version": "0.0.0",
  "main": "_dist/src/main/index.js",
  "author": "anggarobo",
  "license": "MIT",
  "description": "A Electron app with React and Vite",
  "scripts": {
    "format": "prettier --write \"src/**/*.{js,jsx,ts,tsx,json,css,scss,md}\" \"renderer/**/*.{js,jsx,ts,tsx,json,css,scss,md}\"",
    "lint": "pnpm format && eslint --fix \"renderer/**/*.{js,jsx,ts,tsx,json,css,scss,md}\"",
    "build:nodegyp": "node-gyp configure build && mkdir -p ../../apps/gate/build/Release && cp ./build/Release/nativeaddon.node ../../apps/gate/build/Release/",
    "dev": "pnpm format; pnpm build; concurrently -k -n MAIN,RENDERER -c yellow,cyan \"pnpm dev:src\" \"pnpm dev:renderer\" \"pnpm dev:electron\"",
    "dev:src": "tsc -w -p src",
    "dev:renderer": "vite --config vite.config.ts",
    "dev:electron": "wait-on http://localhost:5173 && electron _dist/src/main/index.js",
    "build": "pnpm build:src && pnpm build:renderer",
    "build:src": "tsc -p src",
    "build:renderer": "vite build --config vite.config.ts",
    "build:console": "esbuild src/console/index.ts --bundle --platform=node --format=esm --outfile=_dist/src/console.js",
    "transpile:main": "tsc -p src/tsconfig.json",
    "pkg:console:linux": "pkg _dist/src/console.js --target node18-linux-x64 --output _dist/console",
    "dist:console": "pnpm run build:console && pkg _dist/src/console.js --target node18-linux-x64 --output _dist/console",
    "dist:console-linux": "pnpm build:console && pnpm pkg:console:linux && pnpm run build && electron-builder --linux AppImage",
    "dist:linux": "pnpm run transpile:main && pnpm run build && electron-builder --linux --x64",
    "dist:mac": "pnpm run transpile:main && pnpm run build && electron-builder --mac --arm64",
    "dist:win": "pnpm run transpile:main && pnpm run build && electron-builder --win --x64"
  },
  "dependencies": {
    "@mantine/core": "^8.2.7",
    "@mantine/hooks": "^8.2.7",
    "@tailwindcss/vite": "^4.1.12",
    "bindings": "^1.5.0",
    "dotenv": "^17.2.1",
    "moment": "^2.30.1",
    "mysql2": "^3.14.3",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "serialport": "^13.0.0",
    "tdesign-icons-react": "^0.5.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.34.0",
    "@types/bindings": "^1.5.5",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@typescript-eslint/eslint-plugin": "^8.41.0",
    "@typescript-eslint/parser": "^8.41.0",
    "@vitejs/plugin-react": "^4.0.0",
    "concurrently": "^8.0.0",
    "core-util-is": "^1.0.3",
    "electron": "^36.5.0",
    "electron-builder": "^26.0.12",
    "electron-rebuild": "^3.2.9",
    "esbuild": "^0.25.9",
    "eslint": "^9.34.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-react": "^7.37.5",
    "globals": "^16.3.0",
    "pkg": "^5.8.1",
    "postcss": "^8.5.6",
    "postcss-preset-mantine": "^1.18.0",
    "postcss-simple-vars": "^7.0.1",
    "prettier": "^3.6.2",
    "tailwindcss": "^4.1.12",
    "typescript": "^5.4.0",
    "vite": "^5.0.0",
    "wait-on": "^8.0.4"
  },
  "packageManager": "pnpm@10.12.1+sha512.f0dda8580f0ee9481c5c79a1d927b9164f2c478e90992ad268bbb2465a736984391d6333d2c327913578b2804af33474ca554ba29c04a8b13060a717675ae3ac"
}
