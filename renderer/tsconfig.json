{
  "compilerOptions": {
    "jsx": "react",
    "target": "ESNext",
    "module": "nodenext",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "../_dist/renderer",
    "baseUrl": ".",
    "moduleResolution": "nodenext",
    "paths": {
      "~/*": ["src/*"],
      "assets/*": ["../assets/*"]
    }
  },
  "include": [
    "./**/*.ts",
    "../types.d.ts",
    "postcss.config.cjs",
    "vite.config.ts",
    "src/components/Card.tsx",
    "../declare.d.ts"
  ]
}
